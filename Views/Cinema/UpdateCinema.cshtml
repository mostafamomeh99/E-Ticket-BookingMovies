@model BookingMovies.Models.Cinema


<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateCinema" asp-controller="Cinema" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@Model.Id" name="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label text-light fw-bold mb-2"></label>
                <input asp-for="Name" class="form-control" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label text-light fw-bold mb-2"></label>
                <input asp-for="Description" class="form-control" value="@Model.Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="CinemaLogo" class="control-label text-light fw-bold "></label>
                <i class="d-block mb-2 text-warning">*if no file choosen ,old one will apply </i>
                <input name="CinemaLogo" class="form-control" type="file" value="@Model.CinemaLogo" />
                <span asp-validation-for="CinemaLogo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label text-light fw-bold mb-2"></label>
                <input asp-for="Address" class="form-control" value="@Model.Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
           

            <div class="form-group mt-2 d-flex">
                <input type="submit" value="Update" class="btn btn-dark mt-2" />

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger mt-2">Back </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
