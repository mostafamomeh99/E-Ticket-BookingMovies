<table class="table table-hover table-light">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="font-size:25px;">@item.Name</td>
                <td style="font-size:25px;">
                    <a href=" https://localhost:7045/Cinema/Movies?cinemaid=@item.Id" style="text-decoration:none;" class="text-dark">
                        <i class="fa-solid fa-film fa-sm">
                        </i> All Movies
                    </a>
                </td>
                @if (User.IsInRole("Admin")){
                <td> 
                    <div class="d-flex">
                        <a href="https://localhost:7045/Cinema/UpdateCinema?id=@item.Id" class="btn btn-warning me-2 ">Update</a>

                        <a href="https://localhost:7045/Cinema/DeleteCinema?id=@item.Id" class="btn btn-danger">Delete</a>


                    </div>
                    
                </td>
                }
            </tr>
        }
    </tbody>
</table>