@model BookingMovies.Models.VIEWModel.LoginVm


<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="All" style="color:darkorange"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label text-light"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" style="color:darkorange"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label text-light"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" style="color:darkorange"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="LogIn" class="btn btn-warning mt-4" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
